import axios from 'axios';
import proxyUrl from '../api';

export var FETCH_WIKIS = 'FETCH_WIKIS';

export function fetchWikis(term) {
	var url = 'https://en.wikipedia.org/w/api.php?action=query&list=search&srsearch=' + term + '&utf8=&format=json';
	var reqUrl = '' + proxyUrl + url;

	var request = axios.get(reqUrl);
	return {
		type: FETCH_WIKIS,
		payload: request
	};
}