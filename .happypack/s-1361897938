  area: {
    display: 'inline-block',
    width: '50%',
    height: '90%',
    borderRadius: '0',
    paddingTop: '10px',
    resize: 'none'
  }
};

var TextArea = function TextArea(_ref) {
  var onInputChange = _ref.onInputChange,
      markdown = _ref.markdown;

