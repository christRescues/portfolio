{
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": true,
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./dist/",
    "strictFunctionTypes": true,
    "target": "esnext",
    "lib": ["esnext", "dom", "scripthost"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@images/*": ["images/*"],
      "@store/*": ["store/*"]
    }
  },
  "exclude": ["node_modules"]
}
