{
  "include": ["./src/**/*"],
  "compilerOptions": {
    /* Gatsby Recommended */
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,

    // "alwaysStrict": true,
    // "sourceMap": true,
    // "inlineSources": true,
    // "outDir": "./dist/",
    // "strictFunctionTypes": true,
    // "baseUrl": "./src",
    // "paths": {
    //   "components/*": ["components/*"],
    //   "images/*": ["images/*"],
    //   "theme/*": ["theme/*"],
    //   "store/*": ["store/*"]
    // },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "exclude": ["node_modules"]
}
